<?xml version="1.0" encoding="UTF-8"?>
	<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="member">
	
		<select id="selectDuplicatedId" parameterType="String" resultType="String">
			SELECT
				MEMBER_ID
			FROM
				MEMBER
			WHERE
				MEMBER_ID = #{memberId}
		
		
		</select>
		
		<insert id="insertMember" parameterType="MemberDTO">
			
			INSERT INTO MEMBER
			VALUES(
				#{memberId},
				#{passwd},
				#{memberNm},
				#{email},
				#{emailstsYn},
				#{sort},
				#{zipcode},
				#{roadAddress},
				#{jibunAddress},
				#{namujiAddress},
				NOW()
				
			
			
			)
			
		
		</insert>
		
		<select id="selectGetEncodePasswd" parameterType="String" resultType="String">
		
			
			SELECT
				PASSWD
			FROM
				MEMBER
			WHERE
				MEMBER_ID =#{memberId}
			
		
		
		</select>
		
		
		<select id="selectGetOneMemberData" parameterType="MemberDTO" resultType="MemberDTO">
		
			SELECT 
				*
			FROM
				MEMBER
			WHERE
				MEMBER_ID = #{memberId}
		
		
		</select>
		
		<select id="selectOneDetailMember" parameterType="String" resultType="MemberDTO">
			SELECT 
				*
			FROM 
				MEMBER
			WHERE 
				MEMBER_ID = #{memberId}
				
		
		
		</select>
		
		<update id="updateOneMember" parameterType="MemberDTO">
			
			UPDATE 
				MEMBER 
				
			SET 
				
				MEMBER_NM = #{memberNm},
				EMAIL = #{email},
				EMAILSTS_YN = #{emailstsYn},
				SORT = #{sort},
				ZIPCODE = #{zipcode},
				ROAD_ADDRESS = #{roadAddress},
				JIBUN_ADDRESS = #{jibunAddress},
				NAMUJI_ADDRESS = #{namujiAddress},
				JOIN_DT = NOW()
				
			WHERE 
				MEMBER_ID = #{memberId}
		
		
		</update>
		<delete id="removeOneMember" parameterType="MemberDTO">
		
			DELETE FROM MEMBER
			WHERE 
				MEMBER_ID = #{memberId}
		
		</delete>
	
	
	</mapper>