<?xml version="1.0" encoding="UTF-8"?>
	<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="member">
	
		<select id="selectDuplicatedId" parameterType="String" resultType="String">
			SELECT
				MEMBER_ID
			FROM
				MEMBER
			WHERE
				MEMBER_ID = #{memberId}
		
		
		</select>
		
		<insert id="insertMember" parameterType="MemberDTO">
			
			INSERT INTO MEMBER
			VALUES(
				#{memberId},
				#{passwd},
				#{memberNm},
				#{email},
				#{emailstsYn},
				#{sort},
				#{zipcode},
				#{roadAddress},
				#{jibunAddress},
				#{namujiAddress},
				NOW()
				
			
			
			)
			
		
		</insert>
		
		<select id="selectGetEncodePasswd" parameterType="String" resultType="String">
		
			
			SELECT
				PASSWD
			FROM
				MEMBER
			WHERE
				MEMBER_ID =#{memberId}
			
		
		
		</select>
		
		
		<select id="selectGetOneMemberData" parameterType="MemberDTO" resultType="MemberDTO">
		
			SELECT 
				*
			FROM
				MEMBER
			WHERE
				MEMBER_ID = #{memberId}
		
		
		</select>
	
	
	</mapper>